<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>History</title>
  </head>
  <body class="vh-100">
    <style>
      * {
        padding: 0px;
        margin: 0px;
        /* box-sizing: border-box; */
      }
      #cards-container {
        justify-content: center;
        grid-template-columns: repeat(
          auto-fit,
          minmax(min(100%/2, max(10px, 100%/5)), 250px)
        );
      }
    </style>
    <%- include("partials/nav.ejs") %>
    <div
      style="background-color: #6a00ff; text-align: center"
      class="w-100 d-flex h-25 justify-content-center align-items-center text-white"
    >
      <h1>Previously Downloaded Videos</h1>
    </div>
    <div
      class="w-100 container d-flex flex-column justify-content-center align-items-center mt-5"
    >
      <% if(typeof vids !== 'undefined'){ %>
      <div id="cards-container" class="w-100 d-grid gap-5">
        <% vids.forEach((vid)=>{ %> <%- include("partials/videoCard.ejs",vid) %>
        <% }) %>
      </div>
      <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
