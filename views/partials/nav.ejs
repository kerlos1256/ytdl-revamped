<div style="z-index:100;" class="shadow position-fixed top-0 p-2 d-flex justify-content-center align-items-center vw-100 container-fluid bg-white">
    <% if(typeof authed !== "undefined" && authed !== false){ %>
       <div class="d-flex align-items-center gap-4">
           <div class="d-flex gap-2">
               <div class="d-flex flex-column justify-content-center align-items-center">
                   <a class="px-1 text-decoration-none text-reset" href="/">Home</a>
                   <div id="home" style="padding-bottom:1px;" class="w-100 bg-info invisible"></div>
               </div>
               <div class="d-flex flex-column justify-content-center align-items-center">
                   <a class="px-1 text-decoration-none text-reset" href="/history">History</a>
                   <div id="history" style="padding-bottom:1px;" class="w-100 bg-info invisible"></div>
               </div>
           </div>
           <div id="logout" class="btn btn-sm btn-outline-danger">Logout</div>
        </div>
    <% }else{ %>
        <div class="d-flex align-items-center gap-4">
            <div class="d-flex flex-column justify-content-center align-items-center">
                <a class="px-1 text-decoration-none text-reset" href="/">Home</a>
                <div id="home" style="padding-bottom:1px;" class="w-100 bg-info invisible"></div>
            </div>
            <div class="d-flex gap-2">
                <div><a id="login" class="btn btn-sm btn-outline-info text-decoration-none text-reset" href="/auth/login">Login</a></div>
                <div><a id="register" class="btn btn-sm btn-outline-info text-decoration-none text-reset" href="/auth/register">Register</a></div>
            </div>
        </div>
    <% } %>
</div>

<script>
    document.addEventListener("DOMContentLoaded",()=>{
        console.log('load')
        const pathname = window.location.pathname
        console.log('pathname',pathname)
        switch(pathname){
            case "/auth/register":
                document.getElementById("register").classList.replace('btn-outline-info','btn-info')    
                return
            case "/auth/login":
                document.getElementById("login").classList.replace('btn-outline-info','btn-info')    
                return
            case '/':
                document.getElementById('home').classList.remove('invisible')
                return
            case '/history':
                document.getElementById('history').remove('invisible')
                return
        }
    })
</script>